{
  "name": "@killthebuddha/ragnar",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"nodemon build/server.js\"",
    "test": "mocha build/**/*.test.js",
    "test:e2e": "mocha build/**/*.e2e.test.js",
    "lint": "eslint .",
    "format": "prettier --check .",
    "types": "tsc --noEmit",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "check": "npm run lint && npm run format && npm run types && npm run build && npm run test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.8",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "express": "^4.19.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supabase": "^1.150.0",
    "typescript": "^5.2.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21"
  }
}
